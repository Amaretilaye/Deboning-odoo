<odoo>


    <record id="view_custom_bom_tree" model="ir.ui.view">
        <field name="name">custom.bom.tree</field>
        <field name="model">custom.bom</field>
        <field name="arch" type="xml">
            <tree string="Bill of Materials">
                <field name="name"/>
                <field name="product_id"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <record id="view_custom_bom_form" model="ir.ui.view">
        <field name="name">custom.bom.form</field>
        <field name="model">custom.bom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="top">
                            <field name="product_id"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_custom_bom" model="ir.actions.act_window">
        <field name="name">Bill of Materials</field>
        <field name="res_model">custom.bom</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
